<h1>Edit Project</h1>

<form action="/projects/<%= project._id %>" method="POST">
  <label>Name:</label><br>
  <input type="text" name="name" value="<%= project.name %>" required><br><br>

  <label>Description:</label><br>
  <textarea name="description"><%= project.description %></textarea><br><br>

  <label>Price:</label><br>
  <input type="number" name="price" value="<%= project.price %>"><br><br>

  <label>Completed Work:</label><br>
  <textarea name="completedWork"><%= project.completedWork %></textarea><br><br>

  <label>Start Date:</label><br>
  <input type="date" name="startDate" value="<%= project.startDate?.toISOString().split('T')[0] %>"><br><br>

  <label>End Date:</label><br>
  <input type="date" name="endDate" value="<%= project.endDate?.toISOString().split('T')[0] %>"><br><br>

  <button type="submit">Update</button>
</form>
