<%- include('../partials/header', { title: 'Projekti' }) %>

<h1>Projekti koje vodite</h1>
<a href="/projects/create" class="btn btn-primary">Kreiraj projekt</a>

<div>
  <% ownerProjects.forEach(project => { %>
    <div class="project-card">
      <h2><%= project.name %></h2>
      <p><strong>Opis:</strong> <%= project.description %></p>
      <p><strong>Cijena:</strong> $<%= project.price %></p>
      <p><strong>Obavljeni poslovi:</strong> <%= project.completedWork %></p>
      <p><strong>Početak:</strong> <%= project.startDate ? project.startDate.toISOString().split('T')[0] : '' %></p>
      <p><strong>Kraj:</strong> <%= project.endDate ? project.endDate.toISOString().split('T')[0] : '' %></p>
      <p><strong>Tim:</strong> <%= project.teamMembers.map(u => u.username).join(', ') %></p>
      <div>
        <a href="/projects/<%= project._id %>/edit" class="btn btn-edit">Uredi</a>
        <form action="/projects/<%= project._id %>/delete" method="POST" style="display:inline;">
          <button type="submit" class="btn btn-delete" onclick="return confirm('Jeste li sigurni?');">Obriši</button>
        </form>
      </div>
    </div>
  <% }) %>
</div>

<h1>Projekti u kojima ste član</h1>
<div>
  <% memberProjects.forEach(project => { %>
    <div class="project-card">
      <h2><%= project.name %></h2>
      <p><strong>Opis:</strong> <%= project.description %></p>
      <p><strong>Cijena:</strong> $<%= project.price %></p>
      <form action="/projects/<%= project._id %>" method="POST">
        <label>Obavljeni poslovi:</label>
        <textarea name="completedWork"><%= project.completedWork %></textarea>
        <button type="submit" class="btn btn-primary">Spremi</button>
      </form>
      <p><strong>Početak:</strong> <%= project.startDate ? project.startDate.toISOString().split('T')[0] : '' %></p>
      <p><strong>Kraj:</strong> <%= project.endDate ? project.endDate.toISOString().split('T')[0] : '' %></p>
      <p><strong>Tim:</strong> <%= project.teamMembers.map(u => u.username).join(', ') %></p>
    </div>
  <% }) %>
</div>
